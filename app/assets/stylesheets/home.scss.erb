header {
    width: 100%;
    height: 15vh;
}

.border_header {
    border-bottom: 2px solid white;
    transition: border-bottom 2s;
}

.content {
    width: 94%;
    margin: 4em auto;
    font-size: 20px;
    line-height: 30px;
    text-align: justify;
}

.logo {
    background: url(<%=image_path("logo.png")%>);
    background-size: cover;
    width: 90px;
    height: 90px !important;
    margin: 3px;
}

.fundo_logo_border_topo {
    border: 2px solid;
    border-top-color: #fff!important;
    border-left-color: #fff!important;
    border-bottom-color: #592a80!important;
    border-right-color: #592a80!important;
    transition: 0.3s;
}

.fundo_logo {
    background-color:white;
    width: 100px;
    height: 100px !important;
    border-radius: 50px;
    position: fixed;
    float: left;
    margin-left: 25px;
    margin-top: 25px;
    border: 2px solid;
    border-top-color: #592a80;
    border-left-color: #592a80;
    border-bottom-color: #fff;
    border-right-color: #fff;
    transition: 0.3s;
}

nav {
    position: fixed;
    width: 100%;
    line-height: 60px;
    border-bottom: 2px solid #592a80;
}

nav ul {
    line-height: 60px;
    list-style: none;
    background: rgba(0, 0, 0, 0);
    overflow: hidden;
    color: #fff;
    padding: 0;
    text-align: right;
    margin: 0;
    padding-right: 40px;
    transition: 0.3s;
}

nav.black ul {
    background: #592a80;
}

nav.black ul li a {
    color: #fff;
}

nav ul li {
    display: inline-block;
    padding: 8px 40px;
}

nav ul li a {
    text-decoration: none;
    color: #592a80;
    font-size: 16px;
}

.menu-icon {
    line-height: 60px;
    width: 100%;
    background: #592a80;
    text-align: right;
    box-sizing: border-box;
    padding: 15px 24px;
    cursor: pointer;
    color: #fff;
    display: none;
}

@media(max-width: 786px) {

    .fundo_logo {
        position: fixed;
        top: 0;
        margin-top: 16px;
    }

    nav ul {
        max-height: 0px;
        background: #592a80;
        color: #fff;
    }

    nav.black ul {
        background: #592a80;
        color: #fff;
    }

    .showing {
        max-height: 34em;
    }

    nav ul li {
        box-sizing: border-box;
        width: 100%;
        padding: 24px;
        text-align: center;
    }

    nav ul li a {
        color: #fff;
    }

    .menu-icon {
          display: block;
    }

}
